/**index.wxss**/

page {
  background-color: #f8f8f8;
}

.wrapper {
  padding-top: 20rpx;
  margin-bottom: 100rpx;
}

.message-list {
  margin: 10rpx 30rpx 30rpx;
  overflow: hidden;
}

.chat {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.chat-con {
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #333;
  position: relative;
}

/* left-message */

.chat-l {
  align-items: flex-start;
}

.avater {
  width: 80rpx;
  height: 80rpx;
}

.avater>image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}

.chat-con-l {
  background-color: #fff;
  margin-left: 100rpx;
  margin-top: -50rpx;
}

.chat-con-l::after {
  content: '';
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent #fff transparent transparent;
  position: absolute;
  top: 18rpx;
  left: -33rpx;
}

/* right-message */

.chat-r {
  align-items: flex-end;
}

.chat-con-r {
  background-color: #7dca4a;
  margin-right: 100rpx;
}

.chat-con-r::after {
  content: '';
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent transparent transparent #7dca4a;
  position: absolute;
  top: 18rpx;
  right: -33rpx;
}

.avater-r {
  float: right;
}

/* input-message */

.message-input {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #efefef;
  padding: 20rpx 0;
}

.message-input>input {
  font-size: 30rpx;
  border: solid #f1f1f1 1px;
  width: 72%;
  height: 60rpx;
  line-height: 30rpx;
  margin-left: 18rpx;
  background-color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
}

.message-input>button {
  width: 120rpx;
  height: 70rpx;
  background-color: #7dca4a;
  font-size: 28rpx;
  color: #fff;
  margin-top: -70rpx;
  float: right;
  margin-right: 20rpx;
}

.c-date {
  font-size: 30rpx;
  color: #999;
  padding: 10rpx 0 30rpx;
  text-align: center;
}
